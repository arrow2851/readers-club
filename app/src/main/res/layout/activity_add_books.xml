<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uttej.oraclereadersclub.Home.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/addBooksActivity">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   1. Launch Camera\n   2. Click the book cover\n   3.Type the book name\n   4. Select the genres\n   5. Upload"
                android:layout_above="@id/addBooksLaunchCamera"
                android:layout_marginBottom="30dp"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Launch Camera"
                android:id="@+id/addBooksLaunchCamera"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <!--The bottom navigation bar-->
        <include layout="@layout/layout_bottom_navigation"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
